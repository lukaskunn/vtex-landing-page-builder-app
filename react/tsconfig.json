{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "noEmitOnError": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "lib": [
      "es5",
      "es6",
      "dom"
    ]
  },
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts"
  ],
  "typeAcquisition": {
    "enable": false
  }
}